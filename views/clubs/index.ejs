<h1 class="mb-3">Clubs</h1>

<a href="/clubs/add" class="btn btn-primary mb-3">Add Club</a>

<div class="table-responsive">
  <table class="table table-bordered table-striped w-100">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% clubs.forEach(c => { %>
      <tr>
        <td><%= c.id %></td>
        <td><a href="/clubs/<%= c.id %>/athletes"><%= c.name %></a></td>
        <td>
          <a href="/clubs/edit/<%= c.id %>" class="btn btn-sm btn-warning me-2">Edit</a>
          <a href="/clubs/delete/<%= c.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete club?')">Delete</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<a href="/" class="btn btn-secondary mt-3">Back</a>

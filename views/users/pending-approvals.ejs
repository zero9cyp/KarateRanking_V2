<h2>Εκκρεμείς Εγγραφές Χρηστών</h2>

<% if (users.length === 0) { %>
  <p>Δεν υπάρχουν χρήστες προς έγκριση.</p>
<% } else { %>
  <table class="table">
    <thead>
      <tr><th>Username</th><th>Ρόλος</th><th>Ενέργειες</th></tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.role %></td>
          <td>
            <form method="POST" action="/users/approve/<%= user.id %>">
              <button type="submit" class="btn btn-success btn-sm">Έγκριση</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

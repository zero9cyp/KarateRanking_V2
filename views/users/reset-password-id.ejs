<h1>Επαναφορά Κωδικού για <%= user.username %></h1>

<form method="POST" action="/users/reset-password/<%= user.id %>">
  <div class="mb-3">
    <label class="form-label">Νέος Κωδικός</label>
    <input type="password" name="newPassword" class="form-control" required>
  </div>
  <button type="submit" class="btn btn-primary">Αλλαγή Κωδικού</button>
  <a href="/users" class="btn btn-secondary">Ακύρωση</a>
</form>

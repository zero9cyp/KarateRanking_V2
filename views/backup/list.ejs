<div class="container mt-4">
  <h1 class="mb-3 text-primary">Database Backups</h1>
  <a href="/backup" class="btn btn-success mb-3">â• Create New Backup</a>

  <% if (backups.length > 0) { %>
  <table class="table table-striped align-middle">
    <thead class="table-dark">
      <tr>
        <th>File Name</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% backups.forEach(b => { %>
      <tr>
        <td><%= b.name %></td>
        <td><%= b.time %></td>
        <td class="d-flex gap-2">

          <!-- Restore -->
          <form action="/backup/restore" method="POST" style="display:inline;">
            <input type="hidden" name="backupFile" value="<%= b.name %>">
            <button class="btn btn-sm btn-primary" onclick="return confirm('Restore this backup?')">
              ğŸ”„ Restore
            </button>
          </form>

          <!-- Download -->
          <a href="/backup/download/<%= encodeURIComponent(b.name) %>" class="btn btn-sm btn-success">
            â¬‡ï¸ Download
          </a>

          <!-- Delete -->
          <form action="/backup/delete" method="POST" style="display:inline;">
            <input type="hidden" name="backupFile" value="<%= b.name %>">
            <button class="btn btn-sm btn-danger" onclick="return confirm('Delete this backup?')">
              ğŸ—‘ï¸ Delete
            </button>
          </form>

        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } else { %>
  <div class="alert alert-info">No backups available.</div>
  <% } %>
</div>

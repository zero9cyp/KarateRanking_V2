<div class="container mt-4">
  <h2>ðŸ“œ Points History â€” <%= athlete.full_name %></h2>

  <form class="row g-2 mb-3" action="/points/history/add" method="POST">
    <input type="hidden" name="athlete_id" value="<%= athlete.id %>">
    <div class="col-md-3">
      <input type="number" name="points" class="form-control" placeholder="Points (+/-)" required>
    </div>
    <div class="col-md-6">
      <input type="text" name="reason" class="form-control" placeholder="Reason / Adjustment">
    </div>
    <div class="col-md-3">
      <button type="submit" class="btn btn-success w-100">âž• Add Entry</button>
    </div>
  </form>

  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Date</th>
        <th>Points</th>
        <th>Reason</th>
      </tr>
    </thead>
    <tbody>
      <% if (history.length === 0) { %>
        <tr><td colspan="3" class="text-center text-muted">No history yet.</td></tr>
      <% } else { %>
        <% history.forEach(h => { %>
          <tr>
            <td><%= h.date %></td>
            <td><%= h.points %></td>
            <td><%= h.reason %></td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>

  <a href="/points/overview" class="btn btn-secondary mt-3">â¬… Back</a>
</div>
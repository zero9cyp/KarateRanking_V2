const express = require('express');
const router = express.Router();
const sqlite3 = require('sqlite3').verbose();
const path = require('path');

const db = new sqlite3.Database(path.join(__dirname, "../db/karate_ranking.db"));

// DELETE ranking by year
router.post('/delete/:year', (req, res) => {
  const year = req.params.year;

  // Example: delete from ranking table for that year
  const sql = `DELETE FROM rankings WHERE year = ?`;
  db.run(sql, [year], function(err) {
    if (err) {
      console.error(err);
      return res.send('Error deleting ranking for year ' + year);
    }
    res.redirect('/ranking');
  });
});

module.exports = router;

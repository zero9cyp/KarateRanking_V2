<div class="container mt-5">
  <h1 class="fw-bold text-primary mb-4">
    ğŸ¥‹ Tournaments Participated
  </h1>

  <a href="/athletes" class="btn btn-secondary mb-3">â† Back to Athletes</a>

  <% if (tournaments && tournaments.length > 0) { %>

  <!-- ğŸ† Medal Summary -->
  <%
    let gold = 0, silver = 0, bronze = 0;
    tournaments.forEach(t => {
      if (t.placement === 1 || t.result === 'Win') gold++;
      else if (t.placement === 2 || t.result === 'Finalist') silver++;
      else if (t.placement === 3 || t.result === '3rd Place') bronze++;
    });
  %>
  <div class="alert alert-light border shadow-sm mb-4 text-center">
    <h5 class="fw-bold mb-0">
      ğŸ¥‡ Gold: <span class="text-warning"><%= gold %></span> &nbsp; | &nbsp;
      ğŸ¥ˆ Silver: <span class="text-secondary"><%= silver %></span> &nbsp; | &nbsp;
      ğŸ¥‰ Bronze: <span class="text-info"><%= bronze %></span>
    </h5>
  </div>

  <!-- Tournament Table -->
  <div class="table-responsive shadow-sm rounded">
    <table class="table table-hover align-middle">
      <thead class="table-dark">
        <tr class="text-center">
          <th>Date</th>
          <th>Name</th>
          <th>Location</th>
          <th>Category</th>
          <th>Result</th>
        </tr>
      </thead>
      <tbody>
        <% tournaments.forEach(t => { %>
        <tr class="text-center">
          <td><%= t.date %></td>
          <td><%= t.name %></td>
          <td><%= t.location || '-' %></td>
          <td><%= t.category || '-' %></td>
          <td class="fw-semibold">
            <% if (t.placement === 1 || t.result === 'Win') { %>
              <span class="badge bg-warning text-dark">ğŸ¥‡ 1st</span>
            <% } else if (t.placement === 2 || t.result === 'Finalist') { %>
              <span class="badge bg-secondary">ğŸ¥ˆ 2nd</span>
            <% } else if (t.placement === 3 || t.result === '3rd Place') { %>
              <span class="badge bg-info text-dark">ğŸ¥‰ 3rd</span>
            <% } else { %>
              <span class="badge bg-light text-dark">Participated</span>
            <% } %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <% } else { %>
  <div class="alert alert-info shadow-sm text-center">
    This athlete has not participated in any tournaments yet.
  </div>
  <% } %>
</div>

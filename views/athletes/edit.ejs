<div class="container mt-4">
  <h1 class="mb-4">Edit Athlete</h1>

  <form method="POST" action="/athletes/edit/<%= athlete.id %>" class="row g-3">
    <div class="col-md-6">
      <label class="form-label">Full Name</label>
      <input type="text" name="full_name" value="<%= athlete.full_name %>" class="form-control" required>
    </div>

    <div class="col-md-3">
      <label class="form-label">Birth Date</label>
      <input type="date" name="birth_date" value="<%= athlete.birth_date %>" class="form-control" required>
    </div>

    <div class="col-md-3">
      <label class="form-label">Gender</label>
      <select name="gender" class="form-select" required>
        <!-- IMPORTANT: values are lowercase to match backend filter -->
        <option value="male" <%= athlete.gender === 'male' ? 'selected' : '' %>>Male</option>
        <option value="female" <%= athlete.gender === 'female' ? 'selected' : '' %>>Female</option>
      </select>
    </div>

    <div class="col-md-4">
      <label class="form-label">Age Category</label>
      <select name="age_category_id" class="form-select" required>
        <% ageCategories.forEach(c => { %>
          <option value="<%= c.id %>" <%= c.id === athlete.age_category_id ? 'selected' : '' %>><%= c.name %></option>
        <% }) %>
      </select>
    </div>

    <div class="col-md-4">
      <label class="form-label">Weight Category</label>
      <select name="weight_category_id" class="form-select" required>
        <!-- We will populate this via AJAX and then select the athlete's weight -->
        <option value="">— Loading… —</option>
      </select>
    </div>

    <div class="col-md-4">
      <label class="form-label">Club</label>
      <select name="club_id" class="form-select" required>
        <% clubs.forEach(c => { %>
          <option value="<%= c.id %>" <%= c.id === athlete.club_id ? 'selected' : '' %>><%= c.name %></option>
        <% }) %>
      </select>
    </div>

    <div class="col-md-3">
      <label class="form-label">Total Points</label>
      <input type="number" step="0.01" name="total_points" class="form-control" value="<%= athlete.total_points %>">
    </div>

    <div class="col-12">
      <button type="submit" class="btn btn-primary">Update Athlete</button>
      <a href="/athletes" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
</div>

<script>
  async function updateWeightCategories(preselectId) {
    const ageSelect = document.querySelector('[name="age_category_id"]');
    const genderSelect = document.querySelector('[name="gender"]');
    const weightSelect = document.querySelector('[name="weight_category_id"]');

    const ageId = ageSelect.value;
    const gender = genderSelect.value; // lowercase

    weightSelect.innerHTML = '';

    if (!ageId || !gender) {
      const opt = document.createElement('option');
      opt.value = '';
      opt.textContent = '— Select age & gender first —';
      weightSelect.appendChild(opt);
      return;
    }

    try {
      const res = await fetch(`/athletes/weight-categories?age_category_id=${ageId}&gender=${encodeURIComponent(gender)}`);
      const data = await res.json();

      if (!Array.isArray(data) || data.length === 0) {
        const opt = document.createElement('option');
        opt.value = '';
        opt.textContent = '— No categories found —';
        weightSelect.appendChild(opt);
        return;
      }

      data.forEach(cat => {
        const opt = document.createElement('option');
        opt.value = cat.id;
        opt.textContent = cat.name;
        weightSelect.appendChild(opt);
      });

      // Preselect current athlete's weight category if provided
      if (preselectId) {
        weightSelect.value = String(preselectId);
        if (weightSelect.value !== String(preselectId)) {
          // If current category isn't in filtered list (shouldn't happen), add it manually
          const missing = document.createElement('option');
          missing.value = preselectId;
          missing.textContent = 'Current (not in filtered)';
          weightSelect.appendChild(missing);
          weightSelect.value = String(preselectId);
        }
      }
    } catch (err) {
      console.error('Error loading weight categories:', err);
      const opt = document.createElement('option');
      opt.value = '';
      opt.textContent = '— Error loading categories —';
      weightSelect.appendChild(opt);
    }
  }

  document.querySelector('[name="age_category_id"]').addEventListener('change', () => updateWeightCategories());
  document.querySelector('[name="gender"]').addEventListener('change', () => updateWeightCategories());

  // Populate on load and preselect the athlete’s current weight category
  document.addEventListener('DOMContentLoaded', () => {
    const currentWeightId = '<%= athlete.weight_category_id || "" %>';
    updateWeightCategories(currentWeightId);
  });
</script>

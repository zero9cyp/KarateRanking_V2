<div class="container mt-5">
  <div class="card shadow-sm p-4">
    <h3 class="mb-4 text-center">➕ Προσθήκη Νέου Αθλητή</h3>

    <form method="POST" action="/editor-full/new">
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label fw-bold">Ονοματεπώνυμο</label>
          <input name="full_name" class="form-control" required>
        </div>

        <div class="col-md-3">
          <label class="form-label fw-bold">Φύλο</label>
          <select name="gender" class="form-select">
            <option value="">--</option>
            <option value="male">Άνδρας</option>
            <option value="female">Γυναίκα</option>
          </select>
        </div>

        <div class="col-md-3">
          <label class="form-label fw-bold">Ημ/νία Γέννησης</label>
          <input type="date" name="birth_date" class="form-control">
        </div>

        <div class="col-md-4">
          <label class="form-label fw-bold">Σύλλογος</label>
          <select name="club_id" class="form-select">
            <option value="">-- Επιλογή --</option>
            <% clubs.forEach(c => { %>
              <option value="<%= c.id %>"><%= c.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-4">
          <label class="form-label fw-bold">Ηλικιακή Κατηγορία</label>
          <select name="age_category_id" class="form-select">
            <option value="">-- Επιλογή --</option>
            <% ages.forEach(a => { %>
              <option value="<%= a.id %>"><%= a.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-4">
          <label class="form-label fw-bold">Κατηγορία Κιλών</label>
          <select name="weight_category_id" class="form-select">
            <option value="">-- Επιλογή --</option>
            <% weights.forEach(w => { %>
              <option value="<%= w.id %>"><%= w.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-3">
          <label class="form-label fw-bold">Αρχικοί Πόντοι</label>
          <input type="number" step="0.01" name="total_points" class="form-control" value="0">
        </div>

        <div class="col-md-9 d-flex align-items-end">
          <button class="btn btn-success w-100">💾 Δημιουργία Αθλητή</button>
        </div>
      </div>
    </form>

    <div class="mt-3 text-center">
      <a href="/editor-full" class="btn btn-secondary">⬅ Επιστροφή στην Αναζήτηση</a>
    </div>
  </div>
</div>

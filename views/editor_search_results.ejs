<div class="container mt-4">
  <h4>Αποτελέσματα αναζήτησης για "<%= q %>"</h4>
  <% if (results.length === 0) { %>
    <div class="alert alert-warning mt-3">Δεν βρέθηκαν αθλητές.</div>
  <% } else { %>
    <ul class="list-group mt-3">
      <% results.forEach(r => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= r.full_name %> (#<%= r.id %>)</span>
          <a href="/editor-full/<%= r.id %>" class="btn btn-primary btn-sm">➡️ Άνοιγμα</a>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>

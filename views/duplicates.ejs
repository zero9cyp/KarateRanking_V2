<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="text-primary mb-0">🔁 Πιθανά Διπλότυπα Αθλητών</h1>
    <a href="/" class="btn btn-secondary">← Πίσω</a>
  </div>

  <% if (!duplicates || duplicates.length === 0) { %>
    <div class="alert alert-info">Δεν βρέθηκαν πιθανά διπλότυπα.</div>
  <% } else { %>

    <!-- Bulk merge form -->
    <form action="/duplicates/merge-multi" method="POST" class="card shadow-sm mb-4">
      <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
          <strong>Μαζική Συγχώνευση</strong>
          <div class="d-flex align-items-center gap-2">
            <label class="me-2">Συνένωση πόντων:</label>
            <select name="mergeMode" class="form-select form-select-sm" style="width:auto;">
              <option value="sum">Άθροιση</option>
              <option value="keep">Όπως του keep</option>
            </select>
            <button class="btn btn-sm btn-primary" onclick="return confirm('Σίγουρα για συγχώνευση;')">Συγχώνευση Επιλεγμένων</button>
          </div>
        </div>
      </div>

      <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-dark">
            <tr>
              <th style="width:40px;">#</th>
              <th>Keep → Merge</th>
              <th>Στοιχεία</th>
              <th>Στοιχεία (Υπό συγχώνευση)</th>
              <th class="text-center">Επιλογή για Bulk</th>
              <th class="text-center">Single Merge</th>
            </tr>
          </thead>
          <tbody>
            <% duplicates.forEach((d, idx) => { %>
              <tr>
                <td><%= idx + 1 %></td>
                <td>
                  <div class="small text-muted">κρατάμε → διαγράφουμε</div>
                  <div><strong><%= d.name1 %></strong> (ID <%= d.id1 %>)</div>
                  <div class="text-muted">→ <strong><%= d.name2 %></strong> (ID <%= d.id2 %>)</div>
                </td>

                <td>
                  <div><strong><%= d.name1 %></strong></div>
                  <div>Γέννηση: <%= d.birth1 || '-' %></div>
                  <div>Σύλλογος: <%= d.club1 %></div>
                  <div>Πόντοι: <%= d.total_points1 %></div>
                  <div>Συμμετοχές: <%= d.tourn_count1 %></div>
                </td>

                <td>
                  <div><strong><%= d.name2 %></strong></div>
                  <div>Γέννηση: <%= d.birth2 || '-' %></div>
                  <div>Σύλλογος: <%= d.club2 %></div>
                  <div>Πόντοι: <%= d.total_points2 %></div>
                  <div>Συμμετοχές: <%= d.tourn_count2 %></div>
                </td>

                <td class="text-center">
                  <input type="checkbox" name="pairs[]" value="<%= d.id1 %>,<%= d.id2 %>">
                </td>

                <td class="text-center">
                  <form action="/duplicates/merge" method="POST" onsubmit="return confirm('Συγχώνευση αυτών των δύο;')">
                    <input type="hidden" name="keepId" value="<%= d.id1 %>">
                    <input type="hidden" name="mergeId" value="<%= d.id2 %>">
                    <select name="mergeMode" class="form-select form-select-sm d-inline-block" style="width:auto;">
                      <option value="sum">Άθροιση</option>
                      <option value="keep">Όπως του keep</option>
                    </select>
                    <button class="btn btn-sm btn-outline-primary ms-2">Single Merge</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </form>
  <% } %>
</div>

<!DOCTYPE html>
<html lang="el">
<head>
  <meta charset="UTF-8">
  <title>Κατάταξη Αθλητών</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

  <!-- Select2 -->
  <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

  <style>
    body {
      background: linear-gradient(135deg, #e9f0ff 0%, #fdfdfd 100%);
      font-family: 'Roboto', sans-serif;
      color: #333;
    }

    h1 {
      font-weight: 700;
      letter-spacing: -0.5px;
      color: #1d3557;
    }

    .filter-card {
      background: #ffffff;
      border-radius: 14px;
      padding: 24px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
      transition: all 0.3s ease;
      margin-bottom: 30px;
    }

    .filter-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    .filter-title {
      font-weight: 500;
      color: #1d3557;
    }

    .btn-primary {
      background-color: #1d3557;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      transition: background 0.2s ease;
    }

    .btn-primary:hover {
      background-color: #457b9d;
    }

    .btn-clear {
      background-color: #adb5bd;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      transition: background 0.2s ease;
    }

    .btn-clear:hover {
      background-color: #868e96;
    }

    .table {
      border-radius: 12px;
      overflow: hidden;
      background-color: #fff;
    }

    .table thead th {
      background-color: #1d3557;
      color: #fff;
      font-weight: 500;
      border: none;
    }

    .table tbody tr {
      transition: background-color 0.2s ease;
    }

    .table tbody tr:hover {
      background-color: #f1f5ff;
    }

    .empty-message {
      font-size: 1.1rem;
      color: #6c757d;
      padding: 40px 0;
    }

    /* Custom Select2 Styling */
    .select2-container--default .select2-selection--single {
      height: 38px;
      border-radius: 8px;
      border: 1px solid #ced4da;
      padding: 4px 10px;
    }

    .select2-container--default .select2-selection--single .select2-selection__rendered {
      line-height: 30px;
      color: #333;
    }

    .select2-container--default .select2-selection--single .select2-selection__arrow {
      height: 36px;
      right: 10px;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <h1 class="mb-4 text-center">Κατάταξη Αθλητών</h1>

    <!-- Filter Form -->
    <form method="get" class="mb-5">
      <div class="filter-card">
        <div class="row g-3 align-items-end">

          <!-- Gender Filter -->
          <div class="col-md-3">
            <label for="gender" class="form-label filter-title">Φύλο</label>
            <select name="gender" id="gender" class="form-select shadow-sm">
              <option value="">Όλα</option>
              <option value="male" <%= filters.gender === 'male' ? 'selected' : '' %>>Άνδρες</option>
              <option value="female" <%= filters.gender === 'female' ? 'selected' : '' %>>Γυναίκες</option>
            </select>
          </div>

          <!-- Age Category -->
          <div class="col-md-3">
            <label for="age_category_id" class="form-label filter-title">Κατηγορία Ηλικίας</label>
            <select name="age_category_id" id="age_category_id" class="form-select shadow-sm">
              <option value="">Όλες</option>
              <% ageCategories.forEach(ac => { %>
                <option value="<%= ac.id %>" <%= filters.age_category_id == ac.id ? 'selected' : '' %>><%= ac.name %></option>
              <% }) %>
            </select>
          </div>

          <!-- Weight Category -->
          <div class="col-md-3">
            <label for="weight_category_id" class="form-label filter-title">Κατηγορία Βάρους</label>
            <select name="weight_category_id" id="weight_category_id" class="form-select shadow-sm">
              <option value="">Όλες</option>
              <% weightCategories.forEach(wc => { %>
                <option value="<%= wc.id %>" <%= filters.weight_category_id == wc.id ? 'selected' : '' %>><%= wc.name %></option>
              <% }) %>
            </select>
          </div>

          <!-- Club Filter -->
          <div class="col-md-3">
            <label for="club_id" class="form-label filter-title">Σύλλογος</label>
            <select name="club_id" id="club_id" class="form-select shadow-sm">
              <option value="">Όλοι</option>
              <% clubs.forEach(club => { %>
                <option value="<%= club.id %>" <%= filters.club_id == club.id ? 'selected' : '' %>><%= club.name %></option>
              <% }) %>
            </select>
          </div>

          <!-- Buttons -->
          <div class="col-md-12 text-end mt-3">
            <button type="submit" class="btn btn-primary me-2 shadow-sm">Εφαρμογή Φίλτρων</button>
            <a href="/ranking" class="btn btn-clear shadow-sm">Επαναφορά</a>
          </div>
        </div>
      </div>
    </form>

    <!-- Table or Message -->
    <% 
      const anyFilterActive = filters.gender || filters.age_category_id || filters.weight_category_id || filters.club_id;
    %>

    <% if (anyFilterActive) { %>
      <div class="table-responsive shadow-sm">
        <table class="table table-striped table-bordered table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th scope="col">Rank</th>
              <th scope="col">Name</th>
              <th scope="col">Gender</th>
              <th scope="col">Age Category</th>
              <th scope="col">Weight Category</th>
              <th scope="col">Club</th>
              <th scope="col">Total Points</th>
            </tr>
          </thead>
          <tbody>
            <% if (athletes.length === 0) { %>
              <tr>
                <td colspan="7" class="text-center empty-message">Δεν βρέθηκαν αθλητές με τα συγκεκριμένα κριτήρια.</td>
              </tr>
            <% } else { %>
              <% athletes.forEach((athlete, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= athlete.full_name %></td>
                  <td><%= athlete.gender === 'male' ? 'Άνδρας' : 'Γυναίκα' %></td>
                  <td><%= athlete.age_category_name || '-' %></td>
                  <td><%= athlete.weight_category_name || '-' %></td>
                  <td><%= athlete.club_name || '-' %></td>
                  <td><%= athlete.total_points %></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-center empty-message">🎯 Παρακαλώ επιλέξτε φίλτρα για να δείτε τα αποτελέσματα.</p>
    <% } %>
  </div>

  <!-- jQuery + Select2 -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

  <script>
    $(document).ready(function () {
      $('#gender, #age_category_id, #weight_category_id, #club_id').select2({
        placeholder: "Επιλέξτε...",
        allowClear: true,
        width: '100%',
        language: { noResults: function () { return "Δεν βρέθηκαν αποτελέσματα"; } }
      });
    });
  </script>
</body>
</html>

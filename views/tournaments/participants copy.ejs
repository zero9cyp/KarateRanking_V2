<div class="container mt-5">
  <h2 class="mb-4 text-center">🏆 Participants for <%= tournament.name %></h2>

  <% if (participants.length === 0) { %>
  <div class="alert alert-info text-center">No approved participants yet.</div>
  <% } else { %>
  <table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>#</th>
        <th>Full Name</th>
        <th>Gender</th>
        <th>Age Category</th>
        <th>Weight Category</th>
        <th>Club</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% participants.forEach((p, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= p.full_name %></td>
        <td><%= p.gender %></td>
        <td><%= p.age_category || '—' %></td>
        <td><%= p.weight_category || '—' %></td>
        <td><%= p.club_name || '—' %></td>
        <td>
          <form action="/tournaments/<%= tournament.id %>/participants/delete/<%= p.registration_id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete <%= p.full_name %>?');">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } %>

  <div class="text-center mt-4">
    <a href="/tournaments" class="btn btn-secondary">← Back to Tournaments</a>
  </div>
</div>
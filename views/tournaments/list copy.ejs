<div class="container-fluid px-4 mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">🏆 Tournaments</h2>
    <a href="/tournaments/add" class="btn btn-primary">
      ➕ Add Tournament
    </a>
  </div>

  <% if (tournaments.length === 0) { %>
    <div class="alert alert-info text-center shadow-sm">
      No tournaments found.
    </div>
  <% } else { %>
    <div class="table-responsive shadow-sm rounded bg-white">
      <table class="table table-striped table-hover align-middle mb-0">
        <thead class="table-dark">
          <tr>
            <th style="width: 5%;">ID</th>
            <th style="width: 25%;">Name</th>
            <th style="width: 15%;">Date</th>
            <th style="width: 10%;">Type</th>
            <th style="width: 45%;" class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% tournaments.forEach(t => { %>
            <tr>
              <td><%= t.id %></td>
              <td class="fw-semibold"><%= t.name %></td>
              <td><%= new Date(t.date).toLocaleDateString() %></td>
              <td><%= t.type || '—' %></td>
              <td class="text-center">
                <div class="btn-group" role="group">
                  <a href="/tournaments/edit/<%= t.id %>" class="btn btn-warning btn-sm">
                    ✏️ Edit
                  </a>
                  <form method="POST" action="/tournaments/delete/<%= t.id %>" class="d-inline">
                    <button class="btn btn-danger btn-sm"
                            onclick="return confirm('Delete tournament <%= t.name %>?')">
                      🗑️ Delete
                    </button>
                  </form>
                  <a href="/tournaments/<%= t.id %>/register" class="btn btn-outline-primary btn-sm">
                    📝 Register
                  </a>
                  <a href="/tournaments/<%= t.id %>/approvals" class="btn btn-outline-secondary btn-sm">
                    ✅ Approvals
                  </a>
                  <a href="/tournaments/<%= t.id %>/registrations" class="btn btn-outline-warning btn-sm">
                    ⚙️ Override
                  </a>
                  <a href="/tournaments/<%= t.id %>/participants" class="btn btn-success btn-sm">
                    👥 Participants
                  </a>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>
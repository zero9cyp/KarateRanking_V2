<div class="container-fluid mt-4 px-4">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold">🏆 Tournaments</h2>
    <a href="/tournaments/add" class="btn btn-primary btn-sm">➕ Add Tournament</a>
  </div>

  <% if (!tournaments || tournaments.length === 0) { %>
  <div class="alert alert-info text-center">No tournaments found.</div>
  <% } else { %>

  <div class="row g-4">
    <% tournaments.forEach(t => { %>
    <!-- <div class="col-12 col-md-8 col-lg-6"></div> <<<This is change cards size -->
    <div class="col-12 col-md-15 col-lg-12">
      <div class="card shadow-sm">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title fw-bold"><%= t.name %></h5>
          <p class="card-text mb-1"><strong>Date:</strong> <%= new Date(t.date).toLocaleDateString() %></p>
          <p class="card-text mb-1"><strong>Type:</strong> <%= t.type || '—' %></p>
          <p class="card-text mb-3"><strong>Location:</strong> <%= t.location || '—' %></p>

          <div class="mt-auto d-flex flex-wrap gap-2">
            <a href="/tournaments/edit/<%= t.id %>" class="btn btn-warning btn-sm">✏️ Edit</a>
            <form method="POST" action="/tournaments/delete/<%= t.id %>" class="d-inline">
              <button class="btn btn-danger btn-sm" onclick="return confirm('Delete <%= t.name %>?')">🗑️ Delete</button>
            </form>
            <a href="/tournaments/<%= t.id %>/register" class="btn btn-primary btn-sm">📝 Register</a>
            <a href="/tournaments/<%= t.id %>/approvals" class="btn btn-secondary btn-sm">✅ Approvals</a>
            <a href="/tournaments/<%= t.id %>/registrations" class="btn btn-warning btn-sm">⚙️ Override</a>
            <a href="/tournaments/<%= t.id %>/participants" class="btn btn-success btn-sm">👥 Participants</a>
            </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>

  <% } %>

</div>